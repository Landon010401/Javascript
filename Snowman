/* Constants representing the radius of the top, middle,
 * and bottom snowball. */
var BOTTOM_RADIUS = 100;
var MID_RADIUS = 60;
var TOP_RADIUS = 30;

function start(){
	/* Write your code to make the snowman here! */
	var bottom = new Circle(BOTTOM_RADIUS);
	bottom.setPosition (getWidth()/2, getHeight()-100);
	add(bottom);
	bottom.setColor(Color.gray);
	var mid = new Circle(MID_RADIUS);
	mid.setPosition (getWidth()/2, getHeight()-260);
	add(mid);
	mid.setColor(Color.gray);
	var top = new Circle(TOP_RADIUS);
	top.setPosition (getWidth()/2, getHeight()-350);
	add(top);
	top.setColor(Color.gray);
}
